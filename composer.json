{
    "name": "detailnet/lw-inside-client",
    "description": "API client for Louis Widmer Inside",
    "type": "library",
    "keywords": [
        "Louis Widmer Inside"
    ],
    "homepage": "https://lw-inside.detailnet.ch/",
    "license": "MIT",
    "authors": [
        {
            "name": "Ivan Wolf",
            "email": "ivan.wolf@detailnet.ch"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "psr/log": "~1.0",
        "guzzlehttp/guzzle": "~5.0.3",
        "zendframework/zend-stdlib": "~2.3.9"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.4.5",
        "squizlabs/php_codesniffer" : "~2.2.0",
        "phpmd/phpmd": "~2.1.3",
        "satooshi/php-coveralls": "dev-master"
    },
    "autoload": {
        "psr-0": {
            "Lwi\\Client\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "LwiTest\\Client\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "archive": {
        "exclude": [
            "!vendor",
            "tests",
            "*phpunit.xml",
            ".coveralls.yml",
            ".travis.yml",
            "build.xml",
            "build.properties",
            "composer.phar"
        ]
    }
}
